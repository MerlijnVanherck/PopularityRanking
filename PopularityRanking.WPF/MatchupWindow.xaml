<Window x:Class="PopularityRanking.WPF.MatchupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PopularityRanking.WPF"
        mc:Ignorable="d"
        Title="Matchup" SizeToContent="WidthAndHeight" ResizeMode="CanMinimize">
    <StackPanel Margin="20">
        <Slider Name="participantSlider" Minimum="2" Maximum="10" ValueChanged="participantSlider_ValueChanged" Value="3" MinWidth="250"/>
        <Border DockPanel.Dock="Top" Margin="0 20" BorderThickness="1" BorderBrush="Gray"/>
        <Label>Select matchup participants in order (top: winner, bottom: loser) </Label>
        <StackPanel Name="matchupPanel">
        </StackPanel>
        <Button HorizontalAlignment="Right" Height="25" IsEnabled="False" Margin="0 20 0 0" Name="ProcessMatchupButton" Click="ProcessMatchupButton_Click">Process matchup</Button>
    </StackPanel>
</Window>
